{
  "name": "playkit-sdk",
  "version": "1.0.0-beta.1",
  "description": "PlayKit SDK for JavaScript - AI integration for web-based games (chat, image generation, NPC conversations)",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "sdk",
    "playkit",
    "game",
    "chat",
    "chatgpt",
    "image-generation",
    "npc",
    "p5js",
    "game-engine",
    "llm",
    "openai"
  ],
  "author": "DeveloperWorks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/developerworks/playkit-sdk-js"
  },
  "bugs": {
    "url": "https://github.com/developerworks/playkit-sdk-js/issues"
  },
  "homepage": "https://github.com/developerworks/playkit-sdk-js#readme",
  "dependencies": {
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
